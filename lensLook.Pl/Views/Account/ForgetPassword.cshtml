@model ForgetPasswordVM
@{
    ViewData["Title"] = "ForgetPassword";
}
@{
    Layout = "_LayoutForLoginAndRegister";
}

<link href="~/css/online appointment.css" rel="stylesheet" />

<div class="modal-body container">
    <form asp-action="SendEmail" method="post" asp-controller="account">
    <div asp-validation-summary="All" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label fw-bold">Email Address</label>
            <input type="email"
                   class="form-control"
                   asp-for="Email"
                   aria-describedby="emailHelp"
                   placeholder="Enter your email address"
                   required />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <button type="submit" class="btn main-btn ms-0 mb-3">
            Send Reset Link
        </button>
    </form>
</div>
