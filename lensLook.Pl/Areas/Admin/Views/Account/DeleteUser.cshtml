@model user

@{
    Layout = "_Layout";
}

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Details user </h3>

    </div>


    <div class="card-body table-responsive p-4">
        <form method="post" asp-action="DeleteUser" asp-controller="Account" asp-area="Admin">
            <div class="container">

                <div class="form-group">
                    <label>Display Name</label>
                    <input class="form-control" value="@Model.DisplayName" readonly />
                </div>

                <div class="form-group">
                    <label>DateOfBirth</label>
                    <input class="form-control" value="@Model.DateOfBirth" readonly />
                </div>


                <div class="form-group">
                    <label>Display Name</label>
                    <input class="form-control" value="@Model.Email" readonly />
                </div>


                <div class="form-group">
                    <label>Display Name</label>
                    <input class="form-control" value="@Model.RoleName" readonly />
                </div>

                <div class="form-group hidden">
                    <input class="form-control" value="@Model.Id" readonly />
                </div>

            </div>

            <button type="submit" class="btn btn-danger d-flex justify-content-center"> Delete</button>
        </form>

    </div>

</div>