                </ul>


                <div>

                    <a class="btn main-btn" id="show-login" asp-controller="Account" asp-action="Login">
                        Login
                    </a>



                    <a class="btn main-btn" asp-controller="Account" asp-action="Register">
                        Sign Up
                    </a>
                </div>






            </div>
        </div>
    </nav>

    <!-- Main content wrapped in a content container -->

        @RenderBody()




   



    <!-- reset password -->
    <div class="modal fade" id="forgotPasswordPopup" tabindex="-1" aria-labelledby="forgotPasswordPopupLabel"
         aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title" id="forgotPasswordPopupLabel">
                        Forgot Password
                    </h3>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="forgotPasswordForm" asp-action="RegisterOrLogin" class="login_form" method="post" asp-controller="Account">
                        <div class="mb-3">
                            <label for="forgot_email" class="form-label fw-bold">Email Address</label>
                            <input type="email" class="form-control" id="forgot_email" aria-describedby="emailHelp"
                                   placeholder="Enter your email address" asp-for="@Model.ForgetPassword.Email" required />
                        </div>
                        <button type="submit" class="btn main-btn ms-0 mb-3">
                            Send Reset Link
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>


   

